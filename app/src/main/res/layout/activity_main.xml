    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fab_like" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_like"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#31CD26"
        android:layout_marginBottom="50dp"
        android:layout_marginEnd="40dp"
        app:icon="@drawable/icon_like"
        app:iconSize="40dp"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_upload"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#D4DDDD"
        android:layout_marginBottom="50dp"
        app:icon="@drawable/icon_upload"
        app:iconSize="40dp"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_dislike"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:backgroundTint="#CF084C"
        android:layout_marginBottom="50dp"
        android:layout_marginStart="40dp"
        app:icon="@drawable/icon_dislike"
        app:iconSize="40dp"
        app:iconPadding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />





</androidx.constraintlayout.widget.ConstraintLayout>